<h1>Viewing Test <%=testName%></h1>

<a class="mb-3" href="/course">Back</a>

<% for (let i = 0; i < questions.length; i++) { %>
    <div class="mb-3">
        <h3>Question <%=i + 1%>: <%=questions[i].name%></h3>

        <% for (let k = 0; k < questions[i].options.length; k++) { %>
            <input class="form-check-input" type="radio" name="<%=questions[i].name%>" id="<%=questions[i].name%>_<%=k%>" value="<%=k+1%>" required>
            <label class="form-check-label" for="<%=questions[i].name%>_<%=k%>"><%=questions[i].options[k]%></label>
            
            <% if (k + 1 + "" === questions[i].answer) { %>
                <b class="text-primary">Correct Answer</b>
            <% } %>

            <br>
        <% } %>
    </div>
<% } %>

<a href="/course">Back</a>