<h1>Taking Test <%=testName%></h1>

<form class="p-3" action="/tests/<%=testName%>/submit" method="POST">
    <% for (let i = 0; i < questions.length; i++) { %>
        <div class="mb-3">
            <h3>Question <%=i + 1%>: <%=questions[i].name%></h3>
    
            <% for (let k = 0; k < questions[i].options.length; k++) { %>
                <input class="form-check-input" type="radio" name="<%=questions[i].name%>" value="<%=k+1%>" required>
                <label class="form-check-label" for="<%=questions[i].name%>_<%=k%>"><%=questions[i].options[k]%></label> <br>
            <% } %>
        </div>
    <% } %>

    <button type="submit" class="btn btn-primary">Submit Test</button>
</form>
